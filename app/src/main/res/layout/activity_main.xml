<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_instruction"
        android:text="@string/instruction"
        android:textSize="50sp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/rock_button"
        android:text="@string/rock_btn"
        android:onClick="onRockButtonPressed"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:textSize="30sp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/paper_button"
        android:text="@string/paper_btn"
        android:onClick="onPaperButtonPressed"
        android:layout_marginLeft="200dp"
        android:textSize="30sp"/>

    />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/scissors_button"
        android:text="@string/scissor_btn"
        android:onClick="onScissorButtonPressed"
        android:layout_marginLeft="200dp"
        android:textSize="30sp"/>

    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_view"
        android:text=""
        android:layout_marginLeft="138dp"
        android:textAlignment="center"
        android:textSize="30dp"
        />

</LinearLayout>